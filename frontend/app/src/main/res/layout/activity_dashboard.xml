<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fillViewport="true"
    tools:context=".DashboardActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Header Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/headerCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/pokemon_red"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_pokeball"
                    app:tint="@color/white"/>

                <TextView
                    android:id="@+id/textDashboardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="PokÃ©dex"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Stats Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardIndicators"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/headerCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š EstatÃ­sticas"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/pokemon_red"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/textViewPokemonCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PokÃ©mons cadastrados: 0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="#E0E0E0"/>

                <TextView
                    android:id="@+id/textViewTopTypes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Top 3 tipos: -"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"/>

                <TextView
                    android:id="@+id/textViewTopAbilities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Top 3 habilidades: -"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Actions Section -->
        <TextView
            android:id="@+id/actionsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="AÃ§Ãµes"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            app:layout_constraintTop_toBottomOf="@id/cardIndicators"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCreatePokemon"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="@string/create_pokemon_button_text"
            android:textSize="16sp"
            app:backgroundTint="@color/pokemon_red"
            android:textColor="@color/white"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_add"
            app:iconGravity="textStart"
            app:layout_constraintTop_toBottomOf="@id/actionsLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonListAll"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="@string/list_all_pokemon_button_text"
            android:textSize="16sp"
            app:backgroundTint="@color/pokemon_blue"
            android:textColor="@color/white"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_list"
            app:iconGravity="textStart"
            app:layout_constraintTop_toBottomOf="@id/buttonCreatePokemon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSearchByType"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="Pesquisar por tipo"
            android:textSize="16sp"
            android:textColor="@color/pokemon_red"
            app:strokeColor="@color/pokemon_red"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_search"
            app:iconTint="@color/pokemon_red"
            app:iconGravity="textStart"
            app:layout_constraintTop_toBottomOf="@id/buttonListAll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSearchByAbility"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="Pesquisar por habilidade"
            android:textSize="16sp"
            android:textColor="@color/pokemon_red"
            app:strokeColor="@color/pokemon_red"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_search"
            app:iconTint="@color/pokemon_red"
            app:iconGravity="textStart"
            app:layout_constraintTop_toBottomOf="@id/buttonSearchByType"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonLogout"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:text="Sair"
            android:textSize="16sp"
            android:textColor="@color/textSecondary"
            app:strokeColor="@color/textSecondary"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_close_clear_cancel"
            app:iconTint="@color/textSecondary"
            app:iconGravity="textStart"
            app:layout_constraintTop_toBottomOf="@id/buttonSearchByAbility"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:indeterminateTint="@color/pokemon_red"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
